<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.absolutelysaurabh.stressrelease">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permisson.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/PopMovies">
        <activity
            android:name="com.hackjack.stressrelease.base.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hackjack.stressrelease.base.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/PopMovies" />

        <activity
            android:name="com.hackjack.stressrelease.activity.login.LoginActivity"
            android:theme="@style/SignInScreen"
            />
        <activity
            android:name="com.hackjack.stressrelease.activity.login.SignUpActivity"
            android:theme="@style/SignInScreen"
            />
        <activity
            android:name="com.hackjack.stressrelease.activity.login.ResetPasswordActivity"
            android:theme="@style/SignInScreen"
            />
        <activity
            android:name="com.hackjack.stressrelease.activity.gpchatroom.SingleGroupChatRoomActivity"
            android:theme="@style/PopMovies"
            />
    </application>

</manifest>